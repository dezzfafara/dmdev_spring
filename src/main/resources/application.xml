<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="application.properties"/>
    <context:annotation-config/>


    <bean class="com.dmdev.spring.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="com.dmdev.spring.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>

    <bean id="pool1" name="p1" class="com.dmdev.spring.database.pool.ConnectionPool">
        <constructor-arg name="userName" value="${db.username}"/>
        <constructor-arg name="poolSize" value="${db.pool.size}"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <value>--arg3=value3</value>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="http://localhost"/>
                <entry key="password" value="123!"/>
                <entry key="hosts"
                       value="#{T(java.util.Arrays).stream('${db.hosts}'.split(',')).collect(T(java.util.stream.Collectors).toList)}"/>
            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="com.dmdev.spring.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="p1"/>
    </bean>

</beans>